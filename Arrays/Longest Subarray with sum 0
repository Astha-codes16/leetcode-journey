class Solution {
  public:
    int maxLength(vector<int>& arr) {
        // code here
        int i=0;
        int j=i+1;
        int n=arr.size();
        unordered_map<int,int>mpp;
        //we will be storing prefix sum corresponding to each index,
        //if that prefix sum comes again on another index then it means that the 
        //there was a subarray whose sum was zero
        int sum=0;
        mpp.insert({0, -1});
        int maxi=0;
        for(int i=0;i<n;i++)
        {
         
          sum+=arr[i];
          if(mpp.find(sum)==mpp.end())
          {
             mpp.insert({sum, i});   
          }
          else
          {
              int diff=i-mpp[sum];
              maxi=max(diff,maxi);
          }
           
           
        }
        
    
     return maxi;   
    }
};
