#include <bits/stdc++.h>
using namespace std;

int main() {
    int T;
    cin >> T;
    while (T--) {
        int N;
        cin >> N;
        vector<int> A(N);
        int count1 = 0, count2 = 0, count3 = 0;

        for (int i = 0; i < N; i++) {
            cin >> A[i];
            if (A[i] == 1) count1++;
            else if (A[i] == 2) count2++;
            else if (A[i] == 3) count3++;
        }

        // Minimum deletions
        int deletions = min(count1, count3) + max(0, count2 - 1);
        cout << deletions << endl;
    }
}

