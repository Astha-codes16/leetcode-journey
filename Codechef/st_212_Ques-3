#include <bits/stdc++.h>
using namespace std;

int main() {
    int T;
    cin >> T;
    while (T--) {
        int N;
        cin >> N;
        vector<int> A(N);
        for (int i = 0; i < N; i++) cin >> A[i];

        vector<bool> deleted(N, false);
        int count = 0;

        for (int i = 0; i < N; i++) {
            if (deleted[i]) continue;
            for (int j = i + 1; j < N; j++) {
                if (deleted[j]) continue;
                if (A[i] + A[j] == 4) {
                    deleted[j] = true; // mark instead of erase
                    count++;
                }
            }
        }

        cout << count << endl;
    }
}
