#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int T;
cin>>T;
while(T--)
{
    int N;
    cin>>N;
    int d;
    int t;
    vector<int>A(N);
    for(int i=0;i<N;i++)
    {
        cin>>d>>t;
        A[i]=d/t;
        
        
    }
    //this finds the index of the max element which occurs first; eg-> in {1,2,10,12,12} it returns 3
      int index = max_element(A.begin(), A.end()) - A.begin();
      cout<<index+1<<endl;
    
}
}
